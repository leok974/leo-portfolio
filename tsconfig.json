{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "apps/**/src/**/*.ts",
    "apps/**/src/**/*.tsx", 
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.d.ts",
    "vite.config.ts",
    "vite.config.*.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-portfolio",
    "dist-siteagent",
    "coverage/lcov-report",
    "**/*.md",
    "public/assets/js/**/*.js",
    "assistant_api/**",
    "scripts/seo.tune.mjs",
    "scripts/infra.scale.mjs",
    "scripts/**/*.scale.mjs",
    "test-script.js",
    "**/test-script.js"
  ]
}
