{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "react": ["node_modules/preact/compat"],
      "react-dom": ["node_modules/preact/compat"],
      "react-dom/client": ["node_modules/preact/compat"],
      "react/jsx-runtime": ["node_modules/preact/jsx-runtime"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "apps/**/src/**/*.ts",
    "apps/**/src/**/*.tsx",
    "tests/e2e/**/*.ts",
    "tests/e2e/**/*.tsx",
    "types/**/*.d.ts",
    "vite.config.ts",
    "vite.config.*.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-portfolio",
    "dist-siteagent",
    "coverage/lcov-report",
    "**/*.md",
    "public/assets/js/**/*.js",
    "assistant_api/**",
    "scripts/**",
    "test-script.js",
    "**/test-script.js"
  ]
}
